<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".MyPageEditActivity">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo_black"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/txt_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:gravity="right"
        android:padding="8dp"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/txt_nation"
        app:layout_constraintEnd_toStartOf="@+id/edit_nickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logo" />


    <EditText
        android:id="@+id/edt_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.8"
        android:text="edit_txt"
        android:layout_marginLeft="5dp"
        android:padding="8dp"
        android:background="@drawable/edge"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_nickname"
        app:layout_constraintTop_toTopOf="@+id/txt_nickname" />

    <TextView
        android:id="@+id/txt_nation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:text="국적"
        app:layout_constraintBottom_toTopOf="@+id/txt_intro"
        app:layout_constraintEnd_toStartOf="@+id/edt_nation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nickname" />

    <EditText
        android:id="@+id/edt_nation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="edit_nation"
        android:padding="8dp"
        android:background="@drawable/edge"
        app:layout_constraintBottom_toBottomOf="@+id/txt_nation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edt_nickname"
        app:layout_constraintTop_toTopOf="@+id/txt_nation" />

    <TextView
        android:id="@+id/txt_intro"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="소개"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/edt_intro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nation" />

    <EditText
        android:id="@+id/edt_intro"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:text="edit_intro"
        android:background="@drawable/edge"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edt_nation"
        app:layout_constraintTop_toTopOf="@+id/txt_intro" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />
</androidx.constraintlayout.widget.ConstraintLayout>