<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_post_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="1dp"
            android:layout_marginHorizontal="10dp"
            app:shapeAppearanceOverlay="@style/circle"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/txt_post_userName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:hint="User Name"
            android:textColor="@color/black" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_post_picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_post_heart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_empty_heart"/>
            <ImageView
                android:id="@+id/img_post_comment"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:ellipsize="end"
                android:hint="Content Sample"
                android:maxLines="1"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_post_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="8.5"
                android:layout_marginLeft="10dp"
                android:text="더보기"
                android:textColor="@color/gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_post_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="댓글 16개 보기"
            android:textColor="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_post_comment_profile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="1dp"
                app:shapeAppearanceOverlay="@style/circle"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp" />

            <TextView
                android:id="@+id/txt_post_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:hint="댓글을 입력해주세요."
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="30분 전"
            android:textColor="@color/gray" />
    </LinearLayout>
</LinearLayout>