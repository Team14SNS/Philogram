<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/txt_logo_b"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/txt_philogram" />

            <EditText
                android:id="@+id/edt_id"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edge"
                android:hint="@string/signup_id_hint"
                android:padding="12dp"
                android:paddingStart="20dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_pw"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edge"
                android:hint="@string/signup_pw_hint"
                android:inputType="textPassword"
                android:padding="12dp"
                android:paddingStart="20dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edge"
                android:hint="@string/signup_name_hint"
                android:padding="12dp"
                android:paddingStart="20dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edt_nickname"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/edge"
                android:hint="@string/signup_nickname_hint"
                android:padding="12dp"
                android:paddingStart="20dp"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signup"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/btn_selector"
                android:padding="12dp"
                android:text="@string/signup_signup_btn"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>